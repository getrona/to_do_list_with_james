<h1>Update the <%= @list.first().fetch('name') %> list </h1>

<form action="/lists/<%= @list.first().fetch('id') %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your list:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>
